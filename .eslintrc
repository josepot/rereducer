{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "max-len": ["error", {
      "code": 80,
      "ignoreComments": true,
      "ignoreTemplateLiterals": true,
      "ignoreUrls": true,
      "ignoreTrailingComments": true
    }],
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "no-nested-ternary": 0,
    "no-underscore-dangle": 0,
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
